<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.bobby.trafficpolice">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/nigerianpolice"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="Explore"
            android:theme="@style/MyMaterialTheme" />
        <activity android:name=".SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            />
        </activity>
        <activity
            android:name=".Signin"
            android:label="Login"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme3" />
        <activity
            android:name=".Forgetpassword"
            android:label="Forget Password"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme2" />
        <activity
            android:name=".docstatus"
            android:label="Document Checker-Partner"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme3" />
        <activity
            android:name=".issueticket"
            android:label="Document Checker-Partner"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme5" />
        <activity
            android:name=".doccheckcomplete"
            android:label="Document Checker-Partner"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme4" />

        <activity android:name=".recording"
        android:label="Document Checker-Partner"
        android:screenOrientation="portrait"
        android:theme="@style/AppTheme3"/>
    </application>

</manifest>